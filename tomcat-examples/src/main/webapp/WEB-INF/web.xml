<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0" metadata-complete="true">

	<description>
      Servlet and JSP Examples.
    </description>
	<display-name>Servlet and JSP Examples</display-name>

	<servlet>
		<servlet-name>ChatServlet</servlet-name>
		<servlet-class>chat.control.ChatServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ChatServlet</servlet-name>
		<url-pattern>/jsp/chat/chat</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>chatLogin</servlet-name>
		<servlet-class>websocket.chat.ChatLogin</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>chatLogin</servlet-name>
		<url-pattern>/websocket/login</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>websocket.chat.ChatListener</listener-class>
	</listener>

	<session-config>
		<session-timeout>5</session-timeout>
	</session-config>

</web-app>
